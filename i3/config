# Resize panes
mode "resize-zellij" {
		# These bindings trigger as soon as you enter the resize mode

		# Pressing left will shrink the pane’s width.
		# Pressing right will grow the pane’s width.
		# Pressing up will shrink the pane’s height.
		# Pressing down will grow the pane’s height.
		bindsym j exec $zact ac resize increase left
		bindsym k exec $zact ac resize increase up
		bindsym l exec $zact ac resize increase down
		bindsym m exec $zact ac resize increase right

		# same bindings, but for the arrow keys
		bindsym Left  exec $zact ac resize increase left
		bindsym Down  exec $zact ac resize increase up
		bindsym Up    exec $zact ac resize increase down
		bindsym Right exec $zact ac resize increase right

		# Shift to decrease size
		bindsym Shift+j exec $zact ac resize decrease left
		bindsym Shift+k exec $zact ac resize decrease up
		bindsym Shift+l exec $zact ac resize decrease down
		bindsym Shift+m exec $zact ac resize decrease right
		bindsym Shift+Left  exec $zact ac resize decrease left
		bindsym Shift+Down  exec $zact ac resize decrease up
		bindsym Shift+Up    exec $zact ac resize decrease down
		bindsym Shift+Right exec $zact ac resize decrease right

		# back to normal: Enter or Escape or $mod+r
		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $modZ+r mode "default"
}
bindsym $modZ+r mode "resize-zellij"

# Launch command
bindsym $modZ+d exec rofi -show run -run-command "$zact run -f -c -- {cmd}"
bindsym $modZ+Shift+d exec rofi -show run -run-command "$zact run -f -c -- {cmd}"

